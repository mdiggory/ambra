<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="org.ambraproject.filestore.impl.FileSystemImpl" id="localFileSystemService">
    <constructor-arg index="0" type="java.io.File" ref="fileStoreBaseDir"/>
    <constructor-arg index="1" type="java.lang.String" value="" />
  </bean>

  <bean id="filesToStoreDir" class="java.io.File" >
    <constructor-arg index="0" type="java.lang.String" value="${basedir}/src/test/data/local-filestore/files-to-store"/>
  </bean>

  <bean class="java.io.File" id="fileStoreBaseDir">
    <constructor-arg index="0" value="${basedir}/src/test/data/local-filestore/simple" />
  </bean>

</beans>