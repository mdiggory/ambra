<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.topazproject.ambra.models" auto-import="false">
  <class name="Reply" table="Reply">
    <id name="id" type="org.ambraproject.hibernate.URIType" column="replyUri" length="255">
      <generator class="org.ambraproject.hibernate.AmbraIdGenerator"/>
    </id>

    <discriminator type="boolean" column="isThread"/>
    <!--Annotea Properties-->
    <property name="creator" type="string" column="creator"/>
    <property name="anonymousCreator" type="string" column="anonymousCreator"/>
    <property name="created" type="timestamp" column="creationDate"/>
    <property name="title" type="string" column="title"/>
    <property name="mediator" type="string" column="mediator"/>
    <property name="state" type="int" column="state"/>
    <property name="type" type="string" column="type"/>
    <property name="webType" type="string" column="webType"/>
    <many-to-one name="body" class="org.topazproject.ambra.models.ReplyBlob" column="body" cascade="all"/>

    <property name="root" type="string" column="root"/>
    <property name="inReplyTo" type="string" column="inReplyTo"/>

    <subclass name="org.topazproject.ambra.models.ReplyThread" discriminator-value="true">
      <!--Cascade is off as all replies will copied anyway -->
      <list name="replies" table="RepliesJoinTable" cascade="none" lazy="false">
        <key column="originalThreadUri"/>
        <list-index column="sortOrder"/>
        <many-to-many class="ReplyThread" column="replyThreadUri"/>
      </list>
    </subclass>

  </class>
</hibernate-mapping>