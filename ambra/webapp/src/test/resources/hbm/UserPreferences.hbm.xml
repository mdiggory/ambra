<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.topazproject.ambra.models" auto-import="false">
  <class name="UserPreferences" table="UserPreferences">
    <id name="id" type="org.ambraproject.hibernate.URIType" column="userPreferencesUri" length="100">
      <generator class="org.ambraproject.hibernate.AmbraIdGenerator"/>
    </id>
    <property name="appId" type="string" column="appId"/>

    <set name="prefs" table="UserPreferencesJoinTable" cascade="all">
      <key column="userPreferencesUri"/>
      <many-to-many class="UserPreference" column="userPreferenceUri"/>
    </set>
  </class>
</hibernate-mapping>