<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.topazproject.ambra.models" auto-import="false">

  <class name="RatingContent" table="RatingContent">
    <id name="id" type="string" column="ratingContentUri" length="255">
      <generator class="org.ambraproject.hibernate.AmbraIdGenerator"/>
    </id>
    <property name="insightValue" type="int" column="insightValue"/>
    <property name="reliabilityValue" type="int" column="reliabilityValue"/>
    <property name="styleValue" type="int" column="styleValue"/>
    <property name="singleRatingValue" type="int" column="singleRatingValue"/>
    <property name="commentTitle" type="string" column="commentTitle"/>
    <property name="commentValue" type="string" column="commentValue"/>
    <property name="CIStatement" type="string" column="ciStatement"/>
  </class>

</hibernate-mapping>