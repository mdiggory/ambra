<struts>
    <include file="struts-default.xml"/>

    <package name="default" extends="struts-default">
      <result-types>
        <result-type name="freemarker"
          class="org.apache.struts2.views.freemarker.FreemarkerResult" default="true" />
      </result-types>

      <interceptors>
        <interceptor-stack name="defaultAmbraStack">
          <interceptor-ref name="exception">
            <param name="logEnabled">true</param>
            <param name="logCategory">org.topazproject.ambra.UnhandledException</param>
            <param name="logLevel">WARN</param>                               
          </interceptor-ref>
          <interceptor-ref name="alias"/>
          <interceptor-ref name="servletConfig"/>
          <interceptor-ref name="prepare"/>
          <interceptor-ref name="i18n"/>
          <interceptor-ref name="chain"/>
          <interceptor-ref name="modelDriven"/>
          <interceptor-ref name="staticParams"/>
          <interceptor-ref name="params"/>
          <interceptor-ref name="conversionError"/>
          <interceptor-ref name="validation">
              <param name="excludeMethods">input,back,cancel,browse</param>
          </interceptor-ref>
          <interceptor-ref name="workflow">
              <param name="excludeMethods">input,back,cancel,browse</param>
          </interceptor-ref>
        </interceptor-stack>
      
      
        <interceptor-stack name="ambraRegistrationStack">
          <interceptor-ref name="timer" />
          <!--<interceptor-ref name="logger"/>-->
          <interceptor-ref name="defaultAmbraStack" />
        </interceptor-stack>
      </interceptors>
      <default-interceptor-ref name="ambraRegistrationStack" />

      <default-action-ref name="register" />

      <global-results>
        <result name="error">/pages/serverError.ftl</result>
      </global-results>

      <global-exception-mappings >
        <exception-mapping exception="java.lang.Exception" result="error"/>
      </global-exception-mappings>

      <action name="home">
        <result>/pages/home.ftl</result>
      </action>

      <action name="help">
        <result>/pages/help.ftl</result>
      </action>

      <action name="register">
        <result>/pages/registration.ftl</result>
      </action>

      <action name="registerSubmit" class="org.topazproject.ambra.web.RegisterAction">
        <result name="input">/pages/registration.ftl</result>
        <result name="success">/pages/registrationSuccess.ftl</result>
      </action>

      <action name="emailVerification" class="org.topazproject.ambra.web.ConfirmationAction">
        <result name="success">/pages/emailConfirmationSuccess.ftl</result>
      </action>

      <action name="changeEmail">
        <result name="success">/pages/changeEmail.ftl</result>
      </action>

      <action name="changeEmailSubmit" class="org.topazproject.ambra.web.ChangeEmailAction">
        <result name="success">/pages/changeEmailSuccess.ftl</result>
        <result name="input">/pages/changeEmail.ftl</result>
      </action>

      <action name="changeEmailVerification" class="org.topazproject.ambra.web.ChangeEmailConfirmAction">
        <result name="success">/pages/changeEmailConfirmationSuccess.ftl</result>
      </action>

      <action name="forgotPassword">
        <result>/pages/forgotPassword.ftl</result>
      </action>

      <action name="forgotPasswordSubmit" class="org.topazproject.ambra.web.ForgotPasswordAction">
        <result name="input">/pages/forgotPassword.ftl</result>
        <result name="success">/pages/forgotPasswordSuccess.ftl</result>
      </action>

      <action name="forgotPasswordVerify" class="org.topazproject.ambra.web.ForgotPasswordChangePasswordAction" method="validateResetPasswordRequest">
        <result name="input">/pages/forgotPasswordChange.ftl</result>
        <result name="success">/pages/forgotPasswordChange.ftl</result>
      </action>

      <action name="forgotPasswordChangeSubmit" class="org.topazproject.ambra.web.ForgotPasswordChangePasswordAction">
        <result name="input">/pages/forgotPasswordChange.ftl</result>
        <result name="success">/pages/changePasswordSuccess.ftl</result>
      </action>
 
      <action name="changePassword">
        <result>/pages/changePassword.ftl</result>
      </action>

      <action name="changePasswordSubmit" class="org.topazproject.ambra.web.ChangePasswordAction">
        <result name="input">/pages/changePassword.ftl</result>
        <result name="success">/pages/changePasswordSuccess.ftl</result>
      </action>

      <action name="resendRegistration">
        <result>/pages/resendRegistration.ftl</result>
      </action>

      <action name="resendRegistrationSubmit" class="org.topazproject.ambra.web.ResendRegistrationAction">
        <result name="input">/pages/resendRegistration.ftl</result>
        <result name="success">/pages/registrationSuccess.ftl</result>
      </action>

    </package>
</struts>
