<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.topazproject.ambra.models" auto-import="false">

  <class name="RatingSummaryContent" table="RatingSummaryContent">
    <id name="id" type="string" column="ratingSummaryContentUri" length="255">
      <generator class="org.ambraproject.hibernate.AmbraIdGenerator"/>
    </id>
    <property name="insightNumRatings" type="int" column="insightNumRatings"/>
    <property name="insightTotal" type="double" column="insightTotal"/>

    <property name="reliabilityNumRatings" type="int" column="reliabilityNumRatings"/>
    <property name="reliabilityTotal" type="double" column="reliabilityTotal"/>

    <property name="styleNumRatings" type="int" column="styleNumRatings"/>
    <property name="styleTotal" type="double" column="styleTotal"/>

    <property name="singleRatingNumRatings" type="int" column="singleRatingNumRatings"/>
    <property name="singleRatingTotal" type="double" column="singleRatingTotal"/>

    <property name="numUsersThatRated" type="int" column="numUsersThatRated"/>
  </class>

</hibernate-mapping>                                               